---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
  addAllPagesToCollections: true
layout: layouts/base.html
eleventyComputed:
  title: Tagged “{{ tag }}”
permalink: /tags/{{ tag | slug }}/
---
<h1>Tagged “{{ tag }}”</h1>

{% set postslist = collections[ tag ] %}
{% set headline = tag %}
{% set posts = collections[tag] %}
{% include "layouts/postsSection.njk" %}

<p>See <a href="{{ '/tags/' | url }}">all tags</a>.</p>